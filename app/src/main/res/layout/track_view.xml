<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    >
    
    <ImageView
        android:id="@+id/iv_album_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/iv_album_cover"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="16sp"
        tools:text="Yesterday" />

    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toEndOf="@id/iv_album_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_song_title"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="11sp"
        android:textColor="@color/gray"
        tools:text="The Beatles" />

    <ImageView
        android:id="@+id/ellipse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/tv_artist"
        app:layout_constraintTop_toTopOf="@id/tv_artist"
        app:layout_constraintBottom_toBottomOf="@id/tv_artist"
        android:src="@drawable/ellipse" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toEndOf="@id/ellipse"
        app:layout_constraintTop_toBottomOf="@id/tv_song_title"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="11sp"
        android:textColor="@color/gray"
        tools:text="4:21" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/arrow_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />





    

</androidx.constraintlayout.widget.ConstraintLayout>