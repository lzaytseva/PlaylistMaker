<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainScreenButtonStyle" parent="@style/Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/btn_corners_radius</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsTextViewOptionsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/settings_options_text_padding</item>
        <item name="android:paddingBottom">@dimen/settings_options_text_padding</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_options_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>

    </style>

    <style name="HeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">28dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="ArrowBackStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/go_back</item>
        <item name="android:src">@drawable/arrow_back</item>
        <item name="tint">@color/black</item>
    </style>

</resources>